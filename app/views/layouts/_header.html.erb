<div id="top">
  <div id="logo">
    <% if current_user %>
      <h1><%= link_to 'Tickets, Tickets', '/ticket' %></h1>
    <% else %>
      <h1><%= link_to 'Tickets, Tickets', root_url %></h1>
    <% end %>
  </div>
  
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}", :class => "hideable" %>
  <% end %>
  
  <div id="user_nav">
    <% if current_user %>
      <%= link_to current_user.first_name+' '+current_user.last_name, '/account' %> |
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>
  </div>
</div>